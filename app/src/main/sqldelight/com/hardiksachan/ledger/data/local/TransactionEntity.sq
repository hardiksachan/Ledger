CREATE TABLE ledgerEntry(
    id TEXT NOT NULL UNIQUE PRIMARY KEY,
    title TEXT NOT NULL,
    amount INTEGER NOT NULL,
    isDebit INTEGER AS Boolean NOT NULL,
    instrumentId TEXT NOT NULL,
    categoryIds TEXT AS List<String> NOT NULL,
    modeId TEXT NOT NULL,
    remark TEXT NOT NULL,
    createdAt TEXT NOT NULL
);

insertTransaction:
INSERT OR REPLACE INTO ledgerEntry (
    id,
    title,
    amount,
    isDebit,
    instrumentId,
    categoryIds,
    modeId,
    remark,
    createdAt
) VALUES (
    :id,
    :title,
    :amount,
    :isDebit,
    :instrumentId,
    :categoryIds,
    :modeId,
    :remark,
    :createdAt
);

getAllTransactions:
SELECT *
FROM ledgerEntry
ORDER BY createdAt DESC;

getTransactionById:
SELECT *
FROM ledgerEntry
WHERE id = :id;

deleteTransaction:
DELETE FROM ledgerEntry
WHERE id = :id;